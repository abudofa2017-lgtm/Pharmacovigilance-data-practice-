# My First Pharmacovigilance Data Analysis
# Exploring Drug Side Effects Data

# Step 1: Import necessary libraries
import pandas as pd
import matplotlib.pyplot as plt

print("âœ… Libraries imported successfully!")
print("=" * 50)

# Step 2: Create sample drug side effects data
data = {
    'Drug': ['Drug_A', 'Drug_B', 'Drug_C', 'Drug_D', 'Drug_E'],
    'Headache': [15, 22, 8, 30, 12],
    'Nausea': [10, 18, 5, 25, 8],
    'Dizziness': [7, 12, 3, 20, 6],
    'Total_Patients': [100, 100, 100, 100, 100]
}

# Create a DataFrame (like a spreadsheet in Python)
df = pd.DataFrame(data)
print("ğŸ“Š Sample Drug Side Effects Data:")
print(df)
print("=" * 50)

# Step 3: Calculate percentage of patients with side effects
df['Headache_%'] = (df['Headache'] / df['Total_Patients']) * 100
df['Nausea_%'] = (df['Nausea'] / df['Total_Patients']) * 100
df['Dizziness_%'] = (df['Dizziness'] / df['Total_Patients']) * 100

print("ğŸ“ˆ Side Effects as Percentage of Patients:")
print(df[['Drug', 'Headache_%', 'Nausea_%', 'Dizziness_%']])
print("=" * 50)

# Step 4: Find which drug has the highest headache reports
max_headache = df.loc[df['Headache_%'].idxmax()]
print(f"âš ï¸  Drug with highest headache reports: {max_headache['Drug']}")
print(f"   Percentage: {max_headache['Headache_%']:.1f}% of patients")
print("=" * 50)

# Step 5: Create a simple visualization
plt.figure(figsize=(10, 6))
drugs = df['Drug']
headache_rates = df['Headache_%']

plt.bar(drugs, headache_rates, color='skyblue')
plt.title('Headache Side Effects by Drug', fontsize=14)
plt.xlabel('Drug Name', fontsize=12)
plt.ylabel('Percentage of Patients (%)', fontsize=12)
plt.ylim(0, 35)

# Add percentage labels on bars
for i, v in enumerate(headache_rates):
    plt.text(i, v + 0.5, f'{v:.1f}%', ha='center', fontsize=10)

plt.grid(axis='y', alpha=0.3)
plt.tight_layout()

# Save the chart
plt.savefig('headache_side_effects.png', dpi=300)
print("ğŸ“ˆ Chart saved as 'headache_side_effects.png'")

# Show the chart
plt.show()

print("\nğŸ¯ Analysis Complete!")
print("This simple analysis shows how we can use Python to:")
print("1. Organize drug safety data")
print("2. Calculate risk percentages")
print("3. Identify potential safety signals")
print("4. Visualize results for better decision-making")
